<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Controls.McdoCodeView"
             xmlns:model="clr-namespace:App.Model"
             x:DataType="model:McdoCodeModel">
    
    <Grid ColumnDefinitions="1*, 2*, 1*" Margin="2" BackgroundColor="#FFC72C">
        <Label Text="{Binding CreationDate}"
           TextColor="Black"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"/>

        <Label Grid.Column="1"
           Text="{Binding Code}"
           TextColor="Black"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"/>

        <CheckBox Grid.Column="2"
              Color="#DA291C"
              IsChecked="{Binding IsUsed}"
              CheckedChanged="CheckBox_CheckedChanged"
              >
        </CheckBox>

    </Grid>
</ContentView>
