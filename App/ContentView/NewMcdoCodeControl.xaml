<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Controls.NewMcdoCodeControl">
    <VerticalStackLayout>
        <Label 
            Text="Enter the message you recieved from mcdonalds bellow"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="TextBox"
               Placeholder="Your message from Mcdonald's goes here!"/>

        <Button Text="Add new code"
                Clicked="AddNewCode"/>

    </VerticalStackLayout>
</ContentView>
