<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.McdoPage"
             Title="McdoPage"
             xmlns:viewmodel="clr-namespace:App.ViewModel"
             xmlns:shareabletypes="clr-namespace:ShareableTypes;assembly=ShareableTypes"
             xmlns:controls="clr-namespace:App.Controls"
             x:DataType="viewmodel:McdoViewModel">
    <VerticalStackLayout
        Margin="10, 0">
        <Label 
            Text="Mcdonal's Discount Codes"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <CollectionView
            ItemsSource="{Binding Codes}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="controls:McdoCodeView">
                    
                </DataTemplate>
                <DataTemplate x:DataType="shareabletypes:McdoCode">
                    <Grid ColumnDefinitions="1*, 2*, 1*" Margin="2" BackgroundColor="#FFC72C">
                        <Label Text="{Binding CreationDate}"
                               TextColor="Black"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>

                        <Label Grid.Column="1"
                               Text="{Binding Code}"
                               TextColor="Black"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>

                        <CheckBox Grid.Column="2"
                                  Color="#DA291C"
                                  IsChecked="{Binding IsUsed}"
                                  CheckedChanged="ItemCheckboxChecked"
                                  >
                        </CheckBox>
                        
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>


</ContentPage>